<%= form_with model: product, class: "form-container" do |form| %>
    <div class="form-group">
      <%= form.label :name, "Tên sản phẩm", class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>
    
    <div class="form-group">
      <%= form.label :des, "Mô tả", class: "form-label" %>
      <%= form.text_field :des, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :price, "Giá xèng", class: "form-label" %>
      <%= form.text_field :price, class: "form-input" %>
    </div>

    <div>
      <%= form.label :description, "Mô tả" ,class: "form-label" ,style: "display: block" %>
      <%= form.rich_text_area :description %>
    </div>

    <div>
      <%= form.label :featured_image, "Ảnh sản phẩm" , class: "form-label" %>
      <%= form.file_field :featured_image, accept: "image/*" %>
    </div>
    
    <div>
      <%= form.label :inventory_count, style: "display: block" %>
      <%= form.number_field :inventory_count %>
    </div>
    <div class="form-group">
      <%= form.submit "Lưu", class: "form-button" %>
    </div>
  <% end %>
  
    